# Set up screenshot
bindsym Print exec flameshot full -c -p ~/Pictures/screenshots/
bindsym $mod+Print exec flameshot gui -p ~/Pictures/screenshots/

# Touchpad config
set $touchpad "11"
exec_always --no-startup-id xinput set-prop "$touchpad" "libinput Tapping Enabled" 1
exec_alwasy --no-startup-id xinput set-prpo "$touchpad" "libinput Natural Scrolling Enabled" 1
exec_alwasy --no-startup-id xinput set-prpo "$touchpad" "libinput Disable While Typing Enabled" 0

